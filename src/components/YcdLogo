// src/components/YcdLogo.jsx
import React from "react";

/**
 * YcdLogo
 * Renders the official YouTube Content Downloader logo from /public/ycd_logo.png
 * Usage: <YcdLogo className="h-16 w-16" />
 */
export default function YcdLogo({ className = "h-16 w-16" }) {
  return (
    <img
      src="/ycd_logo.png"
      alt="YouTube Content Downloader"
      width={64}
      height={64}
      className={`mx-auto rounded-full ring-2 ring-blue-200 shadow ${className}`}
      loading="eager"
      decoding="async"
    />
  );
}
